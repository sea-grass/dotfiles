[user]
	name = sea-grass
	email = dev.seagrass@gmail.com
[alias]
	co = checkout
	fap = fetch --all --prune
	s = status


  cs = -c color.status=always s
  clog = -c color.ui=always log -3


  wall = !cat <(git cs) <(echo) <(echo "Latest commits...") <(git clog)

	watch = !watch -c git wall
	w = watch
[diff]
	tool = smerge
[init]
	defaultBranch = main
